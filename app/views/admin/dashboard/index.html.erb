<h1> Welcome, <%= @admin_user.name %>!</h1>
<br>
<%= image_tag profile_img.sample, class: 'profile-img' %>
<br>
<h1 align = "center">Order Information</h1>
<center>
  <table>
    <tr>
      <th>User</th>
      <th>Order ID</th>
      <th>Created At</th>
      <th>Status</th>
      <th>Action</th>
    </tr>
  <% @orders.each do |order|%>
  <section id= "orders-<%=order.id %>">
      <tr>
        <td><%=link_to order.address.user.name, admin_user_path(order.address.user)%></td>
        <td><%= order.id %></td>
        <td><%= order.created_at%></td>
        <td><%= order.status %></td>
        <% if order.status == "packaged" %>
          <td><center><%= button_to "Ship Item", "/admin/orders/#{order.id}/update_status", method: :patch %></center></td>
        <% else %>
          <td> No Action Available </td>
        <% end %>
      </tr>
    </section>
  <% end %>
</table>
