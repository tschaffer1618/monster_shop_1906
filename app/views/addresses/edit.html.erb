<center>
  <h3>Please update your shipping address information:</h3><br>
  <%= form_for(@address, url: "/profile/addresses/#{@address.id}") do |f| %>

      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :street_address %>
      <%= f.text_field :street_address %>

      <%= f.label :city %>
      <%= f.text_field :city %>

      <%= f.label :state %>
      <%= f.text_field :state %>

      <%= f.label :zipcode %>
      <%= f.text_field :zipcode %>

      <%= f.label :nickname %>
      <%= f.text_field :nickname %>

      <%= f.submit 'Update Address' %>
  <% end %>
</center>
